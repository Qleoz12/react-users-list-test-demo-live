{
  "extends": [
    "tslint-config-prettier"
  ],
  "rules": {
    "no-any": [
      true,
      {
        "ignore-rest-args": true
      }
    ],
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "exclude": [
      "tailwind.config.js"
    ]
  }
}